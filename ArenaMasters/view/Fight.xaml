                        <StackPanel>
                            <Button  Height="80" Width="70" Background="Transparent">
                                <Image Source="/images/dragon.png" />
                            </Button>
                            <TextBlock Text="Unit1" Foreground="Bisque" VerticalAlignment="Center" HorizontalAlignment="Center"/>
